<table class='responsive-table'>
  <thead>
    <tr>
      <th>Value</th>
      <th>Date</th>
      <th>Account</th>
      <th>Category</th>
      <th>Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.value %></td>
        <td><%= transaction.date %></td>
        <td><%= transaction.account.name %></td>
        <td><%= "#{transaction.category.id} - #{transaction.category.name}" %></td>
        <td><%= transaction.type %></td>
        <td><%= transaction.description %></td>
        <td><%= link_to 'Destroy', transaction_path(transaction), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path, data: { turbolinks: false } %>
