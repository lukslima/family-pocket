<h1>Dashboard</h1>

<div class='row'>
  <div class='col s12'>
    <%= link_to 'Nova Transação', new_transaction_path, data: { turbolinks: false }, class: 'btn btn-large waves-effect waves-light' %>
  </div>
</div>

<div class='row'>
  <div class='col s12'>
    <div class='card'>
      <div class='card-content'>
        <span class='card-title'>Contas</span>
        
        <% @accounts.each do |account| %>
          <p><%= account.name %>: <strong><%= account.amount %> </strong></p>
        <% end %>

        <hr>
        <p>Total: <strong><%= @total_amount %> </strong></p>
      </div>
    </div>
  </div>
</div>

<div class='row'>
  <div class='col s12'>
    <div class='card'>
      <div class='card-content'>
        <span class='card-title'>Budgets</span>
        <table>
          <thead>
            <tr>
              <th>Nome</th>
              <th>Meta</th>
              <th>Gasto</th>
              <th>Resta</th>
            </tr>
          </thead>
          <tbody>
            <% @budgets.each do |budget| %>
              <tr class='<%= budget.situation_color %>'>
                <td><%= budget.category.name %></td>
                <td><%= budget.value %></td>
                <td><%= budget.spend %></td>
                <td><%= budget.value - budget.spend %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <hr>
        <p>Total: <strong><%= @total_budget %> </strong></p>
      </div>
    </div>
  </div>
</div>